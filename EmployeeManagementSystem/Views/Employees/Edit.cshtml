@model EmployeeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Edit";
}


<br />
<br />
<div class="container" style="background-color: #2D2727; padding: 20px; width: 600px;
    box-shadow: 12px 25px 40px -8px gba(0,0,0,0.89);
    -webkit-box-shadow: 12px 25px 40px -8px rgba(0,0,0,0.89);
    -moz-box-shadow: 12px 25px 40px -8px rgba(0,0,0,0.89);">
    <div class="row">
        <br /><h4>Edit Employee</h4>
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Emp_Id" />
                <div class="form-group">
                    <label asp-for="Emp_Name" class="control-label"></label>
                    <input asp-for="Emp_Name" class="form-control" />
                    <span asp-validation-for="Emp_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Emp_DOB" class="control-label"></label>
                    <input asp-for="Emp_DOB" class="form-control" />
                    <span asp-validation-for="Emp_DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Emp_Email" class="control-label"></label>
                    <input asp-for="Emp_Email" class="form-control" />
                    <span asp-validation-for="Emp_Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Emp_Phone" class="control-label"></label>
                    <input asp-for="Emp_Phone" class="form-control" />
                    <span asp-validation-for="Emp_Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dep_Id" class="control-label"></label>
                    <select asp-for="Dep_Id" class="form-control" asp-items="ViewBag.Dep_Id"></select>
                    <span asp-validation-for="Dep_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <span>
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger">Back to List</a>
                    </span>
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
