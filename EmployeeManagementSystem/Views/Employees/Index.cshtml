@model IEnumerable<EmployeeManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<br />
<h2 style="text-align: center">Employee List</h2>
<br />

<p>
    <a asp-action="Create" class="btn btn-light" style="width: 300px;">Create New</a>
</p>
<table class="table">
    <thead >
        <tr style="background-color: #2D2727">
            <th>
                @Html.DisplayNameFor(model => model.Emp_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp_Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Dept_Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Emp_Id" class="btn btn-dark">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Emp_Id" class="btn btn-dark">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.Emp_Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
